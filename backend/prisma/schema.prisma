generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Detection {
  id                 Int      @id @default(autoincrement())

  deviceId           String
  deviceType         String?

  isAnomaly          Boolean
  confidenceScore    Float
  riskScore          Int
  threatType         String
  threatSeverity     String
  explanation        String

  modelVotes         Json
  recommendedActions Json?      // keep as Json (best with Prisma + Postgres)

  rawTelemetry       Json?

  createdAt          DateTime @default(now())

  //  indexes for your API queries
  @@index([createdAt])
  @@index([deviceId, createdAt])
  @@index([isAnomaly, createdAt])
  @@index([threatSeverity, createdAt])
}

